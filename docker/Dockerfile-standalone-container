# Start from an official Ubuntu image
FROM ubuntu:22.04

# Install curl, Node.js, pnpm, and MySQL server dependencies
RUN apt-get update && \
    apt-get install -y curl gnupg && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs mysql-server && \
    npm install -g pnpm && \
    rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Copy package.json and pnpm-lock.yaml for pnpm install
COPY package.json pnpm-lock.yaml /app/
COPY prisma /app/prisma

# Install project dependencies
RUN pnpm install

# Copy the rest of the application code
COPY . .

# Copy the entrypoint script and make it executable
COPY docker/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Expose the application port (default 3000)
EXPOSE 3000

# Use the entrypoint script for setup and startup
ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["pnpm", "start"]

# Define a volume for MySQL data
VOLUME /var/lib/mysql
